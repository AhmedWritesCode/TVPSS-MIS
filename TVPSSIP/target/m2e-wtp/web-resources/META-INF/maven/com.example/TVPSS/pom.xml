        <version>8.0.26</version> <!-- Use the latest version -->
    </dependency>
    
    <!-- Spring Context (Required for Spring beans) -->
    <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-context</artifactId>
        <version>5.3.15</version> <!-- Use the latest Spring version -->
    </dependency>

    <!-- Spring Transaction -->
